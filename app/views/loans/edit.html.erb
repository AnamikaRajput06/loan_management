<h1>Editing loan</h1>

<%= form_with scope: :loan, url: approve_loan_path(@loan), method: :patch do |form| %>
  <% if @loan.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul>
        <% @loan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="w-50">

    <div class="form-group py-2">
      <%= form.label :interest_rate %>
      <%= form.text_field :interest_rate, class: "form-control" %>
    </div>


    <div class="d-flex">
      <%= form.submit class: 'btn btn-primary'%>
      <%= link_to 'Back', loans_path, class: 'btn btn-secondary mx-3' %>
    </div>
  </div>


<% end %>
